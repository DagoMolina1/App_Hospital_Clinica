<Window x:Class="App_Hospital_Clinica.RegistrarPacienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Paciente"
        Height="420"
        Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Registro de Paciente"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Cédula -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Cédula:" Margin="0,0,5,5" VerticalAlignment="Center"/>
            <TextBox  x:Name="TxtCedula" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

            <!-- Nombre completo -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Nombre completo:" Margin="0,0,5,5" VerticalAlignment="Center"/>
            <TextBox  x:Name="TxtNombre" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>

            <!-- Fecha nacimiento -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Fecha nacimiento:" Margin="0,0,5,5" VerticalAlignment="Center"/>
            <DatePicker x:Name="DpFechaNac" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>

            <!-- Género -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Género:" Margin="0,0,5,5" VerticalAlignment="Center"/>
            <TextBox  x:Name="TxtGenero" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"
                      ToolTip="Ej: M, F, Otro"/>

            <!-- Dirección -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Dirección:" Margin="0,0,5,5" VerticalAlignment="Center"/>
            <TextBox  x:Name="TxtDireccion" Grid.Row="4" Grid.Column="1" Margin="0,0,0,5"/>

            <!-- Teléfono -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Teléfono:" Margin="0,0,5,5" VerticalAlignment="Center"/>
            <TextBox  x:Name="TxtTelefono" Grid.Row="5" Grid.Column="1" Margin="0,0,0,5"/>

            <!-- Correo -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Correo (opcional):" Margin="0,0,5,0" VerticalAlignment="Center"/>
            <TextBox  x:Name="TxtCorreo" Grid.Row="6" Grid.Column="1" Margin="0,0,0,0"/>
        </Grid>

        <!-- Botones -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Guardar"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="BtnGuardar_Click"/>
            <Button Content="Cerrar"
                    Width="100"
                    Click="BtnCerrar_Click"/>
        </StackPanel>
    </Grid>
</Window>